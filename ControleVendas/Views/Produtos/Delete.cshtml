@model ControleVendas.Models.ProdutoModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="colorWhite">Deletar</h1>

<h3 class="colorWhite">Têm certeza que deseja deletar?</h3>
<div>
    <h4 class="colorWhite">Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.PrecoUnit)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.PrecoUnit)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Estoque)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoModelId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">← Voltar</a>
    </form>
</div>
