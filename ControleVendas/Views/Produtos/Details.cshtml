@model ControleVendas.Models.ProdutoModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="colorWhite">Detalhes</h1>

<div>
    <h4 class="colorWhite">Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.PrecoUnit)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.PrecoUnit)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Estoque)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProdutoModelId">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">← Voltar</a>
</div>
