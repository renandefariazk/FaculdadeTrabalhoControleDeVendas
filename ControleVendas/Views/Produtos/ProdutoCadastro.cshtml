@model ProdutoModel
@{
    ViewData["Title"] = "Cadastro de Produtos";
}
<h3>Novo Produto</h3>
<div class="panel panel-default">
    <div class="panel-body">
        <form method="post">
            <div class="col-md-4">

                <div class="form-group">
                    <label asp-for="Codigo" class="control-label">Código do Produto</label>
                    <input asp-for="Codigo" type="number" class="form-control" id="proCodigo" name="Codigo" placeholder="00000">
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome do Produto</label>
                    <input asp-for="Nome" type="text" class="form-control" id="proNome" placeholder="Nome">
                </div>
                <div class="form-group">
                    <label asp-for="PrecoUnit" class="control-label">Preço Unitário</label>
                    <input asp-for="PrecoUnit" type="text" step="0.01" class="form-control" id="proPrecoUnit" placeholder="00,00">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label">Quantidade</label>
                    <input asp-for="Quantidade" type="number" class="form-control" id="proQntd" placeholder="0">
                </div>
            </div>
            <div class="form-group">
                <input type="submit"
                       class="btn btn-success"
                       value="Concluir" />
                <a asp-action="Index" class="btn btn-info">Produtos em Estoque</a>
            </div>
        </form>
    </div>
</div>