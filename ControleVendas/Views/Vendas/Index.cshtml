@model IEnumerable<ClienteModel>

<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Clientes Registrados
    </div>
    <div class="card-body">
        <table id="tabela_clientes">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.cli_nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cli_cpf)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cli_fone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cli_endereco)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.cli_nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cli_cpf)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cli_fone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cli_endereco)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">
            Criar um novo cliente
        </a>
    </div>
</div>