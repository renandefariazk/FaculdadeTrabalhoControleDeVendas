@model ControleVendas.Models.PedidoModel
@using ControleVendas.Models

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h1 class="colorWhite">Detalhes</h1>
    <h4 class="colorWhite">Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.PedidoProdutos)
        </dt>
        <dd class="col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.PedidoProdutos)
        </dd>
        <dt class="col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Cliente)
