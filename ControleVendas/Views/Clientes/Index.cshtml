@model IEnumerable<ControleVendas.Models.ClienteModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="colorWhite centerH1">Clientes</h1>

<div>
        <a asp-action="Create">Novo Cliente</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th class="colorWhite">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="colorWhite">
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th class="colorWhite">
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th class="colorWhite">
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="colorWhite">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td class="colorWhite">
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td class="colorWhite">
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td class="colorWhite">
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteModelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClienteModelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClienteModelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
