@model ClienteModel
@{
    ViewData["Title"] = "Cadastro de Clientes";
}

<h3>Cliente</h3>
<div class="panel panel-default">
    <div class="panel-body">
        <form method="post">
            <div class="col-md-4">

                <div class="form-group">
                    <label asp-for="Cpf" class="control-label">CPF do Cliente</label>
                    <input asp-for="Cpf" type="text" class="form-control" id="clicpf" name="Cpf" placeholder="000.000.000-00">
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome do Cliente</label>
                    <input asp-for="Nome" type="text" class="form-control" id="clinome" placeholder="Nome">
                </div>
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label">Telefone</label>
                    <input asp-for="Telefone" type="number" class="form-control" id="clifone" placeholder="Telefone">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Endereco" class="control-label">Endereço</label>
                    <input asp-for="Endereco" type="text" class="form-control" id="cliendereco" placeholder="Endereço">
                </div>
            </div>
            <div class="form-group">
                <input type="submit"
                       class="btn btn-success"
                       value="Finalizar Cadastro"
                       />
                <a asp-action="Index" class="btn btn-info">Retornar a Lista de Clientes</a>
            </div>
        </form>
    </div>
</div>