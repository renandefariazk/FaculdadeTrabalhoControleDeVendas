@model ControleVendas.Models.ClienteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="colorWhite">Deletar</h1>

<h3 class="colorWhite">Are you sure you want to delete this?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2 colorWhite">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10 colorWhite">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClienteModelId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">← Voltar</a>
    </form>
</div>
